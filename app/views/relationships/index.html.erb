<p id="notice"><%= notice %></p>

<h1>Welcome <%= current_business.name %></h1>
<h1>Listing Relationships</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relationships.each do |relationship| %>
      <% @users_roles.each do |user_role| %>
        <% if relationship.user_id == user_role.user %>
          <tr>
            <td><%= user_role.user %></td>
            <td><%= user_role.first %></td>
            <td><%= user_role.last %></td>
            <td><%= user_role.email %></td>
            <td><%= user_role.role %></td>
            <td><%#= link_to 'Show', relationship %></td>
            <td><%= link_to 'Show', edit_users_role_path(@role_relation.where(:user_id => user_role.user).all) %></td>
            <td><%= link_to 'Edit', edit_relationship_path(relationship) %></td>
            <td><%= link_to 'Destroy', relationship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relationship', new_relationship_path %>
