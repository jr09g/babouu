<p id="notice"><%= notice %></p>

<h1>Welcome <%= current_business.name %></h1>
<h1>Listing Relationships</h1>

<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Role ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relationships.each do |relationship| %>
      <% @users_role.each do |user_role| %>
        <% if relationship.user_id == user_role.user %>
          <tr>
            <td><%= user_role.user %></td>
            <td><%= user_role.first %></td>
            <td><%= user_role.last %></td>
            <td><%= user_role.email %></td>
            <td><%= user_role.role %></td>
            <td><%= link_to 'Manage Role', edit_users_role_path(user_role.ur_id) %></td>
            <td><%= link_to 'Remove Relationship', relationship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

