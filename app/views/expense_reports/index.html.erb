<h1>Expense Reports</h1>

<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start</th>
        <th>End</th>
        <th>Date Created</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @expense_reports.each do |view| %>
      <% if view.user == current_user %>
        <tr>
        <td><%= link_to view.name, view %></td>
        <td><%= view.start_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= view.end_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= view.created_at.to_formatted_s(:long_ordinal) %></td>
        <td><%= link_to 'Delete View', view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

