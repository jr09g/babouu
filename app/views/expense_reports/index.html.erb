<p id="notice"><%= notice %></p>

<h1>Listing Expense Reports</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_reports.each do |expense_report| %>
      <tr>
        <td><%= expense_report.name %></td>
        <td><%= expense_report.start_date %></td>
        <td><%= expense_report.end_date %></td>
        <td><%= link_to 'Show', expense_report %></td>
        <td><%= link_to 'Edit', edit_expense_report_path(expense_report) %></td>
        <td><%= link_to 'Destroy', expense_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

