<h1>Expense Reports</h1>

<table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start</th>
        <th>End</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @expense_reports.each do |view| %>
      <% if view.user == current_user %>
        <tr>
          <td><%= link_to view.name, edit_expense_report_path(view) %></td>
          <td><%= view.start_date.to_formatted_s(:long_ordinal) %></td>
          <td><%= view.end_date.to_formatted_s(:long_ordinal) %></td>
          <td><%= view.status %></td>
          <td>
            <%= link_to expense_report_path(view.id) do %>
              <span class="glyphicon glyphicon-stats"></span>
            <% end %>
          </td>
          <td>
            <%= link_to view, method: :delete, data: { confirm: 'Are you sure you want to delete this expense report?' } do %>
              <span class="glyphicon glyphicon-trash glyph-style-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

