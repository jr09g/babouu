<h1>Editing User Role</h1>

<p>Current Role</p>

<% @roles.each do |role| %>
  <% if role.id == @user_role.role_id %>
    <%=role.name %>
  <% end %>
<% end %>
</br></br>

<table>
  <thead>
    <tr>
      <th>Current Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <% if role.id == @user_role.role_id %>
        <tr>
          <td><%=role.name %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</br></br>

<%= form_for(@user_role) do |f| %>
  <% if @user_role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_role.errors.count, "error") %> prohibited this user role from being updated:</h2>

      <ul>
      <% @user_role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :role %><br>
    <%= f.collection_select(:role_id , @roles, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>

